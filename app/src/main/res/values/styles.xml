<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="colorControlNormal">@color/material_green_500</item>-->
        <!--<item name="colorControlActivated">@color/material_lime_a700</item>-->
        <!--<item name="colorControlHighlight">@color/material_green_a200</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Views -->
    <style name="WrappedView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullWidthView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullScreenView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/screen_edge_standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/screen_edge_standard_margin</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <!-- Progress Bar -->
    <style name="PetsProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Buttons -->
    <style name="DonateButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/material_blue_600</item>
        <item name="android:text">@string/donate</item>
    </style>

    <style name="Button.Standard" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="Button.CardStandard" parent="FirebaseUI.Button.AccountChooser.GoogleButton">
        <item name="android:layout_width">@dimen/button_card_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
