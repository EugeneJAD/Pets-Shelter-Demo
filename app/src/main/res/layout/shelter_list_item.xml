<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="shelter" type="eugene.petsshelter.model.models.Shelter"/>
    </data>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/shelter_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,16:9"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_launcher_background"
            app:imageShelterUrl="@{shelter.imageURL}"/>


        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#7F000000"
            app:layout_constraintBottom_toBottomOf="@+id/shelter_image"
            app:layout_constraintEnd_toEndOf="@+id/shelter_image"
            app:layout_constraintStart_toStartOf="@+id/shelter_image"
            app:layout_constraintTop_toTopOf="@+id/shelter_title"/>


        <TextView
            android:id="@+id/shelter_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#FFFFFFFF"
            card_view:layout_constraintBottom_toBottomOf="@+id/shelter_image"
            card_view:layout_constraintEnd_toEndOf="@+id/shelter_image"
            card_view:layout_constraintStart_toStartOf="parent"
            android:text="@{shelter.title}"
            tools:text="TextView"/>

        <TextView
            android:id="@+id/shelter_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            card_view:layout_constraintBottom_toBottomOf="@+id/marker"
            card_view:layout_constraintStart_toEndOf="@+id/marker"
            card_view:layout_constraintTop_toTopOf="@+id/marker"
            android:text="@{shelter.geoLocation.city}"
            tools:text="TextView"/>

        <ImageView
            android:id="@+id/marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_place_24dp"
            android:tint="@color/cardview_dark_background"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/view"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            card_view:layout_constraintBottom_toBottomOf="@+id/shelter_city"
            card_view:layout_constraintStart_toEndOf="@+id/shelter_city"
            card_view:layout_constraintTop_toTopOf="@+id/shelter_city"/>

        <TextView
            android:id="@+id/shelter_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{shelter.geoLocation.country}"
            tools:text="TextView"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            card_view:layout_constraintBottom_toBottomOf="@+id/shelter_city"
            card_view:layout_constraintStart_toEndOf="@+id/shelter_city"
            card_view:layout_constraintTop_toTopOf="@+id/shelter_city"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
</layout>
