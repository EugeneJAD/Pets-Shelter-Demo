<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="pet" type="eugene.petsshelter.model.models.Pet"/>
        <variable name="handler" type="eugene.petsshelter.view.ui.ButtonClickHandler"/>
    </data>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,16:9"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_launcher_background"
            app:imagePetUrl="@{pet.imageURL}"/>


        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#7F000000"
            app:layout_constraintBottom_toBottomOf="@+id/pet_image"
            app:layout_constraintEnd_toEndOf="@+id/pet_image"
            app:layout_constraintStart_toStartOf="@+id/pet_image"
            app:layout_constraintTop_toTopOf="@+id/pet_title"/>


        <TextView
            android:id="@+id/pet_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#FFFFFFFF"
            card_view:layout_constraintBottom_toBottomOf="@+id/pet_image"
            card_view:layout_constraintEnd_toEndOf="@+id/pet_image"
            card_view:layout_constraintStart_toStartOf="parent"
            tools:text="TextView"
            android:text="@{pet.name}"/>

        <TextView
            android:id="@+id/shelter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/pet_image"
            android:text="@{pet.adopted ? @string/adopted : @string/looking_for_home}"
            android:textColor="@{pet.adopted ? @android:color/holo_orange_light : @android:color/holo_green_light}"
            tools:text="TextView"/>

        <ImageView
            android:id="@+id/add_fav_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_favorite_border_24dp"
            android:tint="@color/colorAccent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/view"
            android:onClick="@{handler::onButtonClick}"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
</layout>