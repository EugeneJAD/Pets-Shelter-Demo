<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/root_donation"
        style="@style/FullScreenView"
        android:background="@color/light_bg">

    <LinearLayout
        style="@style/FullScreenView"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_donation"
            android:layout_weight="1"
            style="@style/FullScreenView">

                <LinearLayout
                    android:id="@+id/content_container"
                    style="@style/FullScreenView"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/FullWidthView"
                        android:layout_marginTop="@dimen/screen_medium_margin"
                        android:orientation="horizontal">

                       <android.support.v7.widget.AppCompatImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="@dimen/screen_edge_standard_margin"
                           app:srcCompat="@drawable/pet_logo"/>

                        <TextView
                            android:id="@+id/donation_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/screen_edge_standard_margin"
                            android:layout_marginStart="@dimen/screen_content_margin"
                            android:text="@string/donation_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/donation_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/screen_edge_standard_margin"
                        android:text="@string/donation_text"/>

                    <android.support.v7.widget.CardView
                        style="@style/CardViewDonation">

                        <LinearLayout
                            style="@style/FullWidthView"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/amount_title"
                                style="@style/CardTitleDonation"
                                android:text = "@string/amount_donation"/>

                            <View style="@style/Divider"/>

                            <RadioGroup
                                android:id="@+id/radio_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/screen_edge_standard_margin"
                                android:layout_marginEnd="@dimen/screen_edge_standard_margin"
                                android:layout_marginStart="@dimen/screen_edge_standard_margin"

                                android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radioButton"
                                        style="@style/RadioButton"
                                        android:background="@color/material_purple_600"
                                        android:onClick="onAmountSelected"
                                        android:text="10$"/>

                                    <RadioButton
                                        android:id="@+id/radioButton2"
                                        style="@style/RadioButton"
                                        android:background="@color/material_green_700"
                                        android:onClick="onAmountSelected"
                                        android:text="25$"/>

                                    <RadioButton
                                        android:id="@+id/radioButton3"
                                        style="@style/RadioButton"
                                        android:background="@color/material_blue_700"
                                        android:onClick="onAmountSelected"
                                        android:text="50$">
                                </RadioButton>
                            </RadioGroup>

                            <com.github.chuross.library.ExpandableLayout
                                android:id="@+id/choose_amount_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="@dimen/screen_edge_standard_margin"
                                android:layout_marginStart="@dimen/screen_edge_standard_margin"
                                android:layout_marginBottom="@dimen/screen_edge_standard_margin"
                                app:layout_constraintTop_toBottomOf="@+id/radio_group"
                                app:exl_collapseHeight = "@dimen/radio_button_height"
                                app:exl_expanded="false">

                                <LinearLayout
                                    style="@style/FullWidthView"
                                    android:orientation="vertical">

                                    <RadioButton
                                        android:id="@+id/radioButton4"
                                        style="@style/RadioButton"
                                        android:layout_width="match_parent"
                                        android:background="@color/material_pink_a700"
                                        android:onClick="onAmountSelected"
                                        android:text="@string/your_choice"/>

                                    <android.support.v7.widget.AppCompatEditText
                                        android:id="@+id/amount_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="numberDecimal"
                                        android:maxLength="5"
                                        android:hint="@string/enter_amount"/>

                                </LinearLayout>
                            </com.github.chuross.library.ExpandableLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        style="@style/CardViewDonation">

                        <LinearLayout
                            style="@style/FullWidthView"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card_info_title"
                                android:text = "@string/card_information"
                                style="@style/CardTitleDonation"/>

                            <View style="@style/Divider"/>

                            <com.stripe.android.view.CardInputWidget
                                android:id="@+id/card_input_widget"
                                style="@style/FullWidthView"
                                android:layout_margin="@dimen/screen_edge_standard_margin"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
        </ScrollView>

        <RelativeLayout style="@style/FullWidthView">
            <Button
                android:id="@+id/donate_button"
                style="@style/Button.Standard"
                android:text="@string/donate"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/screen_edge_standard_margin"
                android:layout_marginStart="@dimen/screen_edge_standard_margin"
                android:layout_marginBottom="@dimen/screen_edge_standard_margin"
                android:onClick="onApplyClick"/>
        </RelativeLayout>

    </LinearLayout>

    <include
        android:id="@+id/progress_view"
        layout="@layout/progress_view"/>

</android.support.design.widget.CoordinatorLayout>
</layout>